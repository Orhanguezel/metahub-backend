{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "types": ["node", "express"],
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "src",
    "src/types/**/*.d.ts",
    "src/**/*"
  ]
}