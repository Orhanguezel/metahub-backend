{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "allowSyntheticDefaultImports": true,
    "types": [
      "node",
      "express",
      "multer"
    ],
    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ],
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src",
    "src/types"
, "project-docs/newsletter"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}